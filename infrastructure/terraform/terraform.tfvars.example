# Example terraform.tfvars file
# Copy this file to terraform.tfvars and update the values

# AWS Configuration
aws_region = "us-east-1"
environment = "development"

# Network Configuration
vpc_cidr = "10.0.0.0/16"
public_subnet_cidr = "10.0.1.0/24"

# EC2 Configuration - FREE TIER
instance_type = "t2.micro"  # AWS Free Tier eligible

# SSH Key Configuration
# Make sure you have generated an SSH key pair:
# ssh-keygen -t rsa -b 4096 -f ~/.ssh/id_rsa
public_key_path = "~/.ssh/id_rsa.pub"

# GitHub Configuration
github_repo_url = "https://github.com/Wolf4war/Foodie"
# github_token = "USE_ENVIRONMENT_VARIABLE"  # Set via TF_VAR_github_token environment variable for security